{
  "manifest_version": 3,
  "name": "LilChat",
  "version": "0.6.0",
  "description": "Um chat persistente em popup ou sidebar.",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "alarms",
    "tabs",
    "sidePanel"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "sidepanel.html",
        "popup.html",
        "popup.css",
        "popup.js",
        "coloris.min.css",
        "coloris.min.js",
        "firebase-app-compat.js",
        "firebase-auth-compat.js",
        "firebase-database-compat.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}